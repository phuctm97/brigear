      {# 
        SHIPPING MODAL
      #}
      <div class="checkout-shipping-modal">
        <a class="checkout-shipping-modal-more-info">Delivery rate is calculated according to item size.</a>
      </div>
    </div>



    {# 
      COL 2 - DELIVERY ADDRESS 
    #}
    <div class="checkout-column-2">
      {# 
        COLUMN HEADING 
      #}
      <h2 class="checkout-column-heading">
        <span class="checkout-column-heading-text">
          <strong>2. DELIVERY ADDRESS </strong>
        </span>
      </h2>

      <div class="checkout-fields">
        <div class="checkout-fields-all-required">All fields required</div>

        <div class="checkout-field-section checkout-field-section-shipping">
          {# 
            FIRST NAME
          #}
          <div class="checkout-field-wrapper checkout-field-wrapper-shipping-first-name">
            <label>First name*</label>
            <input class="checkout-field-wrapper-error" type="text" id="shipping_first_name" autocomplete="shipping given-name" placeholder="">
            <div class="hide checkout-field-wrapper-error-message">This is a required field.</div>
          </div>



          {# 
            LAST NAME 
          #}
          <div class="checkout-field-wrapper checkout-field-wrapper-shipping-last-name">
            <label>Last name*</label>
            <input class="checkout-field-wrapper-error" type="text" id="shipping_last_name" autocomplete="shipping family-name" placeholder="">
            <div class="hide checkout-field-wrapper-error-message">This is a required field.</div>
          </div>



          {# 
            EMAIL 
          #}
          <div class="checkout-field-wrapper checkout-field-wrapper-billing-email">
            <label>Email address*</label>
            <input class="checkout-field-wrapper-error" type="text" id="billing-email" autocomplete="billing email" placeholder="levogiakhang@gmail.com">
            <div class="hide checkout-field-wrapper-error-message">This is a required field.</div>
          </div>



          {# 
            PHONE NUMBER 
          #}
          <div class="checkout-field-wrapper checkout-field-wrapper-shipping-phone-number">
            <label>Telephone*</label>
            <input class="checkout-field-wrapper-error" type="text" id="shipping_phone_number" autocomplete="shipping tel" placeholder="">
            <div class="hide checkout-field-wrapper-error-message">This is a required field.</div>
          </div>



          {# 
            DELIVERY ADDRESS 
          #}
          <div class="checkout-field-wrapper checkout-field-wrapper-shipping-street-address-one">
            <label>Delivery address*</label>
            <input class="checkout-field-wrapper-error" type="text" id="shipping_street_address_1" autocomplete="shipping street-address address-line1"
                   placeholder="e.g. Unit 1, 123 Main Street">
            <div class="hide checkout-field-wrapper-error-message">This is a required field.</div>
          </div>

          <div class="checkout-field-wrapper checkout-field-wrapper-shipping-street-address-two">
            <input type="text" id="shipping_street_address_2" autocomplete="shipping address-line2" placeholder="">
          </div>



          {# 
            TOWN 
          #}
          <div class="checkout-field-wrapper checkout-field-wrapper-shipping-city">
            <label>Suburb/town*</label>
            <input class="checkout-field-wrapper-error" type="text" id="shipping_city" autocomplete="shipping address-level2" placeholder="">
            <div class="hide checkout-field-wrapper-error-message">This is a required field.</div>
          </div>



          {# 
            STATE 
          #}
          <div class="checkout-field-wrapper checkout-field-wrapper-shipping-region">
            <label>State/territory*</label>
            <span class="checkout-field-wrapper-select-wrapper">
            <span class="checkout-field-wrapper-select-wrapper-trimmed-value"> </span>
            <select class="checkout-field-wrapper-error" id="shipping_state" autocomplete="shipping address-level1">
              <option> </option>
              <option value="44">An Giang</option>
              <option value="72">Dak Nong</option>
              <option value="30">Gia Lai</option>
              <option value="73">Hau Giang</option>
              <option value="65">Ho Chi Minh City</option>
              <option value="71">Huyen Dien Bien</option>
            </select>
          </span>
            <div class="hide checkout-field-wrapper-error-message">This is a required field.</div>
          </div>

          <div class="checkout-field-wrapper checkout-field-wrapper-shipping-postcode">
            <label>Postcode*</label>
            <input class="checkout-field-wrapper-error" type="text" id="shipping_postcode" autocomplete="shipping postal-code" placeholder="">
            <div class="hide checkout-field-wrapper-error-message">This is a required field.</div>
          </div>

          <div class="checkout-field-wrapper checkout-field-wrapper-shipping-country-code">
            <label>Country*</label>
            <span class="checkout-field-wrapper-select-wrapper">
            <span class="checkout-field-wrapper-select-wrapper-trimmed-value">Viet Nam</span>
            <select class="checkout-field-wrapper-error" id="shipping_country" autocomplete="shipping country">
              <option> </option>
              <option value="AF">Afghanistan</option>
              <option value="AX">Ã…land Islands</option>
              <option value="AL">Albania</option>
              <option value="DZ">Algeria</option>
              <option value="AS">American Samoa</option>
            </select>
          </span>
          <div class="hide checkout-field-wrapper-error-message">This is a required field.</div>
          </div>

        </div>
        <div class="checkout-field-use-shipping-as-billing-details">
          <label>
            <input type="checkbox">
            Same billing address
          </label>
        </div>
      </div>
    </div>



    {# 
      COL 3 -SELECT PAYMENT METHOD 
    #}
    <div class="checkout-column-3">
      {# 
        COLUMN HEADING 
      #}
      <h2 class="checkout-column-heading">
        <span class="checkout-column-heading-text">
          <strong>3.SELECT PAYMENT METHOD</strong>
        </span>
      </h2>



      {# 
        PAYMENT 
      #}
      <div class="checkout-payment-method">
        <div class="checkout-payment-option-list">

          {# 
            CARD 
          #}
          <div class="checkout-payment-option checkout-payment-option-card">
            <div class="checkout-payment-option-logo">
              <svg class="checkout-payment-option-logo-img">
                <use xlink:href="#iconCardFront"></use>
              </svg>
            </div>
            <div class="checkout-payment-option-label">Card</div>
          </div>



          {# 
            PAYPAL 
          #}
          <div class="checkout-payment-option checkout-payment-option-paypal">
            <div class="checkout-payment-option-logo">
              <svg class="checkout-payment-option-logo-img">
                <use xlink:href="#iconCardFront"></use>
              </svg>
            </div>
            <div class="checkout-payment-option-label">Paypal</div>
          </div>



          {# 
            COD 
          #}
          <div class="custom-control custom-checkbox checkout-payment-option-cod">
            <input type="checkbox" class="custom-control-input" id="customCheck1" checked="true">
            <label class="custom-control-label" for="customCheck1">Cash on Delivery</label>
          </div>
        </div>
      </div>



      {# 
        ORDER SUMMARY 
      #}
      <h2 class="checkout-column-heading">
        <span class="checkout-column-heading-text">
          <strong>Order Summary</strong>
        </span>
      </h2>



      <!-- 
        CART TOTALS 
      -->  
      <div class="checkout-cart-totals">
        <div class="checkout-cart-totals-confirm">Confirm your order</div>
        <table cellpadding="0" cellspacing="0">
          <tr>
            <td>1 x Note Sleeve, Navy</td>
            <td>
              <span class="currency">
                <span class="currency-monetary">$95.00</span>
                <span class="currency-code">USD</span>
              </span>
            </td>
          </tr>
        </table>
      </div>



      <!-- 
        SUBTOTAL 
      -->  
      <div class="checkout-totals">
        <table cellpadding="0" cellspacing="0">
          <tr>
            <td>Subtotal</td>
            <td>
              <span class="currency">
