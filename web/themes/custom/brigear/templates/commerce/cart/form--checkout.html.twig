              <span class="currency">
                <span class="currency-monetary">$9.00</span>
                <span class="currency-code">USD</span>
              </span>
            </td>
          </tr>
        </table>
      </div>



      <!-- 
        OTHER TOTAL 
      -->
      <div class="checkout-order-total">
        <div>Order total</div>
        <div>
          <span class="currency">
            <span class="currency-monetary">$104</span>
            <span class="currency-code">USD</span>
