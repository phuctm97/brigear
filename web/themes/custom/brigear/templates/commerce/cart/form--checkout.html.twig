                  <option value="2">2</option>
                  <option value="3">3</option>
                </select>
              </span>
          </div>
        </div>
      </div>



      {# 
        HEADING SMALL 
      #}
      <div class="checkout-heading-small">
        <h2>
          <span class="checkout-column-heading-text">Select delivery:</span>
        </h2>
      </div>



      {# 
        SHIPPING OPTION 
      #}
      <div class="checkout-shipping-option">
        <div class="checkout-shipping-option-options">
          {# EACH OPTION #}
          <div class="checkout-shipping-option-other checkout-shipping-option-selected">
            <div class="checkout-shipping-option-charge">
              <span class="currency-monetary">
                <strong>$6</strong>
              </span>
              <span class="currency-code">
                <strong>USD</strong>
              </span>
            </div>

